{
  "hooks": [
    {
      "name": "aicms-validate",
      "trigger": "pre_commit",
      "command": "aicms lint --require-intent {{staged_files}}",
      "description": "Ensure all functions have @ai:intent annotation"
    },
    {
      "name": "aicms-validate-strict",
      "trigger": "pre_commit",
      "command": "aicms lint --require-intent --require-module-intent {{staged_files}}",
      "description": "Strict: Require @ai:intent on functions and @ai:module:intent on files"
    },
    {
      "name": "aicms-confidence-check",
      "trigger": "pre_commit",
      "command": "aicms lint --warn-low-confidence --confidence-threshold 0.8 {{staged_files}}",
      "description": "Warn on functions with confidence < 0.8"
    }
  ]
}
